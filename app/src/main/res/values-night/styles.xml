<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainLayoutHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="mainLayoutButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_Black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">3sp</item>
        <item name="iconTint">@color/YP_Black</item>
    </style>

    <style name="settingLayoutTextStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">4</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settingLayoutButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">3sp</item>
    </style>

    <style name="settingButtonStyleWithGrayColorIcon" parent="settingLayoutButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="settingHeaderButtonStyle" parent="settingLayoutButtonStyle">
        <item name="iconTint">@color/white</item>
    </style>

    <style name="searchActivityEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">@color/YP_Black</item>
        <item name="android:drawableStart">@drawable/search_icon_black</item>
    </style>

    <style name="commonSearchActivityStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="searchActivityButtonClearStyle" parent="commonSearchActivityStyle">
        <item name="android:src">@drawable/clear_black</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="searchActivityAlbumImageStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="searchActivityFailureTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/padding_48</item>
        <item name="android:textSize">@dimen/text_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="searchActivityButtonUpdateStyle" parent="commonSearchActivityStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/corner_56</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

</resources>