<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/generalHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/backButtonHeader"
            style="@style/SettingButtonStyle"
            app:icon="@drawable/main_setting_light_mode"
            app:iconTint="@color/dark_blue" />

        <TextView
            android:id="@+id/settingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="20dp"
            android:text="@string/settings"
            android:textColor="@color/dark_blue"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/switchThemeLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/blackThemeText"
            style="@style/SettingTextStyle"
            android:text="@string/black_theme" />

        <Switch
            android:id="@+id/switchThemes"
            android:layout_width="@dimen/width_button_activity_settings"
            android:layout_height="@dimen/height_button_activity_settings"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shareLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintTop_toBottomOf="@+id/switchThemeLayout">

        <TextView
            android:id="@+id/shareTheApp"
            style="@style/SettingTextStyle"
            android:text="@string/share_the_app" />

        <Button
            android:id="@+id/shareButton"
            style="@style/SettingButtonStyleWithGrayColorIcon"
            app:icon="@drawable/share_light_mode" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/supportLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintTop_toBottomOf="@+id/shareLayout">

        <TextView
            android:id="@+id/writeToSupport"
            style="@style/SettingTextStyle"
            android:text="@string/write_to_support" />

        <Button
            android:id="@+id/supportButton"
            style="@style/SettingButtonStyleWithGrayColorIcon"
            app:icon="@drawable/support_light_mode" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/userAgreementLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintTop_toBottomOf="@+id/supportLayout">

        <TextView
            android:id="@+id/userAgreementView"
            style="@style/SettingTextStyle"
            android:text="@string/user_agreement" />

        <Button
            android:id="@+id/userAgreementButton"
            style="@style/SettingButtonStyleWithGrayColorIcon"
            app:icon="@drawable/arrow_forward_light_mode" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>