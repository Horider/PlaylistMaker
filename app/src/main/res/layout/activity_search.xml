<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker">

    <LinearLayout
        android:id="@+id/generalHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButtonHeader"
            style="@style/settingHeaderButtonStyle"
            app:icon="@drawable/main_setting_light_mode" />

        <TextView
            android:id="@+id/searchTxtView"
            style="@style/headerTxtStyle"
            android:layout_gravity="center"
            android:paddingStart="18dp"
            android:text="@string/search" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/background_grey">
<!--        style="@style/searchFrameLayout">-->

        <EditText
            android:id="@+id/inputEditText"
            style="@style/searchActivityEditTxt"
            android:hint="@string/search"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="100"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:paddingEnd="16dp"
            android:src="@drawable/clear"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>